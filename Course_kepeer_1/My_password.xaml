      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_kepeer_1"
      mc:Ignorable="d" 
      MinHeight="534" MinWidth="722"
      Title="My_password">

    <Grid>
        <ListBox  Name="list" SelectionChanged="list_SelectionChanged" FontSize="30" FontFamily="Baskerville Old Face"  />
        <Border Name="border1" BorderThickness="1" HorizontalAlignment="Right" Width="5" Margin="0,0,1,0" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Grid Background="Coral" >
                <Frame Name="my_passframe" HorizontalAlignment="Right" MinWidth="3" Margin="0,0,-1,0" >

                </Frame>
            </Grid>
        </Border>

    </Grid>
</Page>
